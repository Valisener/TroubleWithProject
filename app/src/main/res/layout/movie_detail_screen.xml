<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/detail_image_movie"
        android:layout_width="108dp"
        android:layout_height="157dp"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <TextView
        android:id="@+id/detail_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Movie Title" />

        <ImageView
            android:id="@+id/detail_image_starts"
            android:layout_width="158dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_launcher_background" />


        <TextView
            android:id="@+id/details_movie_description_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Man wasnt meant to die here" />

        <TextView
            android:id="@+id/details_release_date_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="05/11/2014" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/details_budget_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget  " />

            <TextView
                android:id="@+id/details_budget_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200,000,000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/details_revenue_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenue  " />

            <TextView
                android:id="@+id/details_revenue_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="621,752,480" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status  " />

            <TextView
                android:id="@+id/textView77"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Released" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>